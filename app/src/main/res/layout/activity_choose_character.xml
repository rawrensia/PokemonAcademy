<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Control.ChooseCharacterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper"
        tools:layout_editor_absoluteX="-48dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/profile_button_next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button1"
        android:text="Next"
        android:textColor="@color/darkBlue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/quenda"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949" />

    <EditText
        android:id="@+id/profile_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/details_input_field"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="textEmailAddress"
        android:paddingLeft="24dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.251" />

    <EditText
        android:id="@+id/course_index"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/details_input_field"
        android:ems="10"
        android:hint="Enter CZ3003 Course Index"
        android:inputType="textPersonName"
        android:paddingLeft="24dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.336" />

    <LinearLayout
        android:id="@+id/characterGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:id="@+id/pikachu"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/char5" />

        <ImageView
            android:id="@+id/bulbasaur"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/char2" />

        <ImageView
            android:id="@+id/snorlax"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/char3" />

        <ImageView
            android:id="@+id/pinkbear"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/char1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quenda"
        android:text="Profile information"
        android:textAlignment="center"
        android:textColor="@color/darkBlue"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quenda"
        android:text="Select your character"
        android:textAlignment="center"
        android:textColor="@color/lightyellow"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.705" />


</androidx.constraintlayout.widget.ConstraintLayout>