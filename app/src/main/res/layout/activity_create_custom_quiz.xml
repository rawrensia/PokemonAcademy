<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient2">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Create Your Custom Quiz"
        android:fontFamily="@font/quenda"
        android:textColor="@color/yellow"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:layout_marginTop="8dp"
        android:id="@+id/addQuestionTV"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:hint="Type your question here"
        android:gravity="top"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/edit_text"
        android:textSize="16dp"/>

    <EditText
        android:id="@+id/correctChoiceTV"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:maxLines="2"
        android:layout_marginTop="15dp"
        android:hint="Type the right answer here"
        android:textSize="16dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_2" />

    <EditText
        android:id="@+id/addChoice1TV"
        android:layout_marginTop="8dp"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:textSize="16dp"
        android:hint="Type incorrect answer here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_3" />

    <EditText
        android:id="@+id/addChoice2TV"
        android:layout_marginTop="8dp"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:hint="Type incorrect answer here"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/addQuestionBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Submit Question"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/quenda"
            android:background="@drawable/button2"/>

    </LinearLayout>

    <TextView
        android:id="@+id/totalQuestionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total questions: 0"
        android:fontFamily="@font/quenda"
        android:textSize="18dp"
        android:textColor="@color/yellow"
        app:layout_constraintBottom_toTopOf="@+id/createQuizBtn"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/createQuizBtn"
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:layout_height="60dp"
        android:layout_marginBottom="36dp"
        android:text="View Question List"
        android:textSize="16dp"
        android:fontFamily="@font/quenda"
        android:textStyle="bold"
        android:textColor="@color/darkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996"
        android:layout_gravity="center"
        android:background="@drawable/button1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/createCustomQuizSV"/>

</LinearLayout>